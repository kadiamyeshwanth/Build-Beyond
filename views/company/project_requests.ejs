            color: var(--secondary-green);
            font-weight: 500;
            font-size: 0.9rem;
        }

        .detail-item span {
            color: var(--dark-grey);
            font-size: 1rem;
        }

        .detail-full {
            grid-column: 1 / -1;
        }

        .floor-box {
            background-color: #f9f9f9;
            padding: 1.25rem;
            border-radius: 6px;
            margin-bottom: 1rem;
            border: 1px solid var(--border-color);

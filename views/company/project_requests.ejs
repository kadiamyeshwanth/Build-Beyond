        :root {
            --primary-green: #4D7A70;
            --secondary-green: #6A9E8E;
            --light-green: #A3C5BB;
            --dark-grey: #363636;
            --medium-grey: #5A5A5A;
            --light-grey: #E0E0E0;
            --white: #FFFFFF;
            --black: #000000;
            --border-color: #d9d9d9;
        }

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f5f5f5;
            color: var(--dark-grey);
        }

        .header {
            background-color: var(--primary-green);
            color: var(--white);
            padding: 1.25rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .logo i {
            font-size: 1.5rem;
        }

        .header h1 {
            font-size: 1.5rem;
            font-weight: 600;
        }

        .header-actions {
            display: flex;
            gap: 1rem;
        }

        
        .dashboard {
            padding: 2rem;
            max-width: 1440px;
            margin: 0 auto;
        }

        .dashboard-header {
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--border-color);
        }

        .dashboard-title {
            font-size: 1.25rem;
            color: var(--primary-green);
            font-weight: 600;
        }

        .cards-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 1.5rem;
        }

        .card {
            background-color: var(--white);
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
            border: 1px solid var(--border-color);
            transition: all 0.2s ease;
        }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: var(--light-green);
            padding: 1.25rem;
            position: relative;
            border-bottom: 1px solid var(--border-color);
        }

        .card-header h3 {
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--primary-green);
        }

        .card-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 0.85rem;
            color: var(--medium-grey);
        }

        .card-id {
            font-weight: 500;
        }

        .card-date {
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }

        .card-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            padding: 0.3rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
            color: var(--white);
        }

        .card-body {
            padding: 1.25rem;
        }

        .card-info {
            margin-bottom: 1.25rem;
        }

        .card-info p {
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
            display: flex;
            justify-content: space-between;
        }

        .card-info p:last-child {
            margin-bottom: 0;
        }

        .card-info strong {
            color: var(--medium-grey);
            font-weight: 500;
        }

        .card-info span {
            color: var(--dark-grey);
            font-weight: 400;
            text-align: right;
        }

        .card-actions {
            display: flex;
            gap: 0.75rem;
        }

        .card-btn {
            padding: 0.6rem 1rem;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: 500;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            transition: all 0.2s ease;
        }

        .btn-view {
            background-color: var(--white);
            color: var(--primary-green);
            border: 1px solid var(--primary-green);
            flex-grow: 1;
        }

        .btn-view:hover {
            background-color: var(--primary-green);
            color: var(--white);
        }

        .btn-accept {
            background-color: var(--secondary-green);
            color: var(--white);
            flex-basis: 40%;
        }

        .btn-accept:hover {
            background-color: var(--primary-green);
        }

        .btn-reject {
            background-color: var(--white);
            color: var(--secondary-green);
            border: 1px solid var(--secondary-green);
            flex-basis: 40%;
        }

        .btn-reject:hover {
            background-color: var(--secondary-green);
            color: var(--white);
        }

        .modal-backdrop {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            visibility: hidden;
            opacity: 0;
            transition: visibility 0s 0.3s, opacity 0.3s linear;
        }

        .modal-backdrop.active {
            visibility: visible;
            opacity: 1;
            transition: opacity 0.3s linear;
        }

        .modal {
            background-color: var(--white);
            width: 90%;
            max-width: 900px;
            max-height: 85vh;
            border-radius: 8px;
            overflow: hidden;
            overflow-y: auto;
            transform: translateY(-30px);
            transition: transform 0.3s ease;
            box-shadow: 0 5px 25px rgba(0, 0, 0, 0.15);
        }

        .modal-backdrop.active .modal {
            transform: translateY(0);
        }

        .modal-header {
            background-color: var(--primary-green);
            color: var(--white);

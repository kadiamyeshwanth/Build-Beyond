    <script>
        // Toggle View Details Section for multiple projects
        const viewDetailsBtns = document.querySelectorAll('.view-details-btn');
        
        viewDetailsBtns.forEach(button => {
            button.addEventListener('click', () => {
                const projectId = button.getAttribute('data-project');
                const viewDetailsSection = document.getElementById(`details-${projectId}`);
                
                // Hide all other details sections first
                document.querySelectorAll('.view-details').forEach(section => {
                    if (section.id !== `details-${projectId}`) {
                        section.classList.remove('active');
                    }
                });
                
                // Toggle the clicked section
                viewDetailsSection.classList.toggle('active');
                
                // Update button text based on state
                if (viewDetailsSection.classList.contains('active')) {
                    button.textContent = 'Hide Details';
                } else {
                    button.textContent = 'View Details';
                }
            });
        });
        
        // Filter buttons functionality
        const filterButtons = document.querySelectorAll('.filter-button');
        filterButtons.forEach(button => {
            button.addEventListener('click', () => {
                filterButtons.forEach(btn => {
                    btn.classList.remove('active');
                    btn.classList.add('inactive');
                });
                button.classList.remove('inactive');
                button.classList.add('active');
            });
        });
    </script>

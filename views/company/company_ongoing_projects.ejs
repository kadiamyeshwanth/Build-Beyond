      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap"
      rel="stylesheet"
    />
    <style>
        :root {
            --primary-green: #4D7A70;
            --secondary-green: #6A9E8E;
            --light-green: #A3C5BB;
            --dark-grey: #363636;
            --medium-grey: #5A5A5A;
            --light-grey: #E0E0E0;
            --white: #FFFFFF;
            --black: #000000;
        }
        .progress-bar {
            width: calc(var(--progress) * 1%);
        }
        a:-webkit-any-link {
            cursor: pointer;
            text-decoration: none;
        }
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: var(--white);
            color: var(--black);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-container {
            flex: 1;
            padding: 2rem;
            background-color: var(--light-grey);
        }

        .page-title {
            margin-bottom: 1.5rem;
            color: var(--primary-green);
            font-size: 1.8rem;
        }

        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background-color: var(--white);
            border-radius: 8px;
            padding: 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .stat-card h3 {
            font-size: 1rem;
            color: var(--medium-grey);
            margin-bottom: 0.5rem;
        }

        .stat-card .stat-value {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--primary-green);
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .add-project-btn {
            background-color: var(--primary-green);
            color: var(--white);
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .add-project-btn:hover {
            background-color: var(--secondary-green);
        }

        .content-wrapper {
            display: grid;
            grid-template-columns: 3fr 1fr;
            gap: 1.5rem;
        }

        .left-section {
            background-color: var(--white);
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .project-display {
            display: flex;
            border-bottom: 1px solid var(--light-grey);
            padding: 1.5rem;
        }

        .project-image {
            width: 40%;
            border-right: 1px solid var(--light-grey);
            padding-right: 1.5rem;
        }

        .project-image img {
            width: 100%;
            height: auto;
            object-fit: cover;
            border-radius: 6px;
            display: block;
        }

        .project-details {
            width: 60%;
            padding-left: 1.5rem;
        }

        .project-details h2 {
            margin-bottom: 1rem;
            color: var(--dark-grey);
            font-size: 1.5rem;
        }

        .project-details p {
            margin-bottom: 1rem;
            color: var(--medium-grey);
            line-height: 1.5;
        }

        .project-details .location {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            color: var(--medium-grey);
            font-size: 0.9rem;
        }

        .project-tag {
            display: inline-block;
            padding: 0.3rem 0.8rem;
            background-color: var(--light-grey);
            color: var(--primary-green);
            border-radius: 20px;
            font-size: 0.8rem;
            margin-right: 0.5rem;
            margin-bottom: 1rem;
        }

        .status-tag {
            display: inline-block;
            padding: 0.3rem 0.8rem;
            background-color: #E5F4EF;
            color: var(--primary-green);
            border-radius: 20px;
            font-size: 0.8rem;
            margin-right: 0.5rem;
        }

        .progress-container {
            margin-top: 1rem;
            margin-bottom: 1rem;
        }

        .progress-bar {
            height: 8px;
            background-color: var(--light-grey);
            border-radius: 4px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            background-color: var(--secondary-green);
        }

        .progress-text {
            display: flex;
            justify-content: space-between;
            font-size: 0.8rem;
            color: var(--medium-grey);
            margin-top: 0.5rem;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .view-details-btn, .edit-btn {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 4px;
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .view-details-btn {
            background-color: var(--primary-green);
            color: var(--white);
        }

        .view-details-btn:hover {
            background-color: var(--secondary-green);
        }

        .edit-btn {
            background-color: var(--light-grey);
            color: var(--medium-grey);
        }

        .edit-btn:hover {
            background-color: #D0D0D0;
        }

        .view-details {
            display: none;
            padding: 1.5rem;
            border-top: 1px solid var(--light-grey);
        }

        .view-details.active {
            display: block;
        }

        .view-details h3 {
            font-size: 1.2rem;
            color: var(--dark-grey);
            margin-bottom: 1rem;
        }

        .view-details .images {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
        }

        .view-details .images img {
            width: 150px;
            height: 100px;
            object-fit: cover;
            border-radius: 6px;
        }

        .view-details .recent-updates {
            margin-bottom: 1.5rem;
        }

        .view-details .update {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--light-grey);
        }

        .view-details .update:last-child {
            border-bottom: none;
        }

        .view-details .update img {
            width: 100px;
            height: 80px;
            object-fit: cover;
            border-radius: 6px;
        }

        .view-details .update p {
            flex: 1;
            color: var(--medium-grey);
            line-height: 1.5;
        }

        .right-section {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .filter-properties {
            background-color: var(--white);
            border-radius: 8px;
            padding: 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .filter-properties h2 {
            margin-bottom: 1rem;
            color: var(--dark-grey);
            font-size: 1.2rem;
            font-weight: bold;
        }

        .filter-button {
            display: block;
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 0.5rem;
            text-align: center;
            border-radius: 4px;
            border: none;
            font-size: 0.9rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .filter-button.active {
            background-color: var(--primary-green);
            color: var(--white);
        }

        .filter-button.inactive {
            background-color: var(--light-grey);
            color: var(--medium-grey);
        }

        .filter-button.inactive:hover {
            background-color: #D0D0D0;
        }

        @media (max-width: 900px) {
            .content-wrapper {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            .project-display {
                flex-direction: column;
            }

            .project-image, .project-details {
                width: 100%;
                padding: 0;
                border-right: none;
            }

            .project-image {
                margin-bottom: 1.5rem;
            }
        }
    </style>
</head>

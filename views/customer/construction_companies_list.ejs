<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Construction Companies</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: #f5f5f5;
            color: #333;
            line-height: 1.6;
        }

        /* Page Title */
        .page-title {
            text-align: center;
            padding-bottom: 2rem;
            font-size: 2.2rem;
            color: #1a3c64;
            font-weight: 600;
            position: relative;
            margin-bottom: 1.5rem;
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 1.5rem;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: #1a3c64;
            border-radius: 2px;
        }

        /* Card Container */
        .company-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 25px;
            padding: 0 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Company Card */
        .company-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            padding: 25px;
            position: relative;
            border-top: 5px solid #1a3c64;
        }

        .company-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12);
        }

        .company-card:nth-child(2) {
            border-top-color: #ff6b35;
        }

        .company-card:nth-child(3) {
            border-top-color: #48c774;
        }

        .company-card:nth-child(4) {
            border-top-color: #1a3c64;
        }

        .company-card:nth-child(5) {
            border-top-color: #ffc107;
        }

        .company-name {
            font-size: 22px;
            font-weight: 700;
            color: #1a3c64;
            margin-bottom: 15px;
            text-align: center;
        }

        .company-stats {
            display: flex;
            justify-content: space-between;
            margin: 20px 0;
            background: #f9f9f9;
            border-radius: 8px;
            padding: 12px;
        }

        .stat {
            text-align: center;
            flex: 1;
        }

        .stat:not(:last-child) {
            border-right: 1px solid rgba(26,60,100,0.2);
        }

        .stat-number {
            font-size: 20px;
            font-weight: 700;
            color: #1a3c64;
            display: block;
        }

        .stat-label {
            font-size: 12px;
            color: #7f8c8d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .company-details {
            font-size: 15px;
            color: #555;
            line-height: 1.5;
            margin-bottom: 20px;
            text-align: justify;
        }

        .location {
            display: flex;
            align-items: center;
            font-size: 14px;
            color: #7f8c8d;
            margin-bottom: 20px;
        }

        .location i {
            color: #1a3c64;
            margin-right: 8px;
        }

        .buttons {
            display: flex;
            gap: 10px;
        }

        .view-details-btn, .book-now-btn {
            flex: 1;
            padding: 12px 0;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-align: center;
            border: none;
            text-decoration: none;
        }

        .view-details-btn {
            background: #1a3c64;
            color: white;
        }

        .view-details-btn:hover {
            background: #123052;
        }

        .book-now-btn {
            background: #ff6b35;
            color: white;
        }

        .book-now-btn:hover {
            background: #e55a2b;
        }

        /* Details Overlay */
        .details-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            display: flex;
            justify-content: center;
            align-items: center;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .details-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        .details-content {
            background: white;
            border-radius: 12px;
            width: 90%;
            max-width: 700px;
            max-height: 85vh;
            overflow-y: auto;
            padding: 30px;
            position: relative;
            transform: scale(0.9);
            transition: all 0.3s ease;
        }

        .details-overlay.active .details-content {
            transform: scale(1);
        }

        .close-details {
            position: absolute;
            top: 15px;
            right: 15px;
            background: none;
            border: none;
            font-size: 22px;
            cursor: pointer;
            color: #7f8c8d;
            transition: color 0.3s ease;
        }

        .close-details:hover {
            color: #e55a2b;
        }

        .detail-company-name {
            font-size: 26px;
            font-weight: 700;
            color: #1a3c64;
            margin-bottom: 5px;
            padding-bottom: 15px;
            border-bottom: 2px solid rgba(26,60,100,0.2);
            text-align: center;
        }

        .detail-company-subtitle {
            font-size: 16px;
            color: #7f8c8d;
            text-align: center;
            margin-bottom: 25px;
        }

        .detail-section {
            margin-bottom: 30px;
        }

        .detail-section-title {
            font-size: 18px;
            font-weight: 600;
            color: #1a3c64;
            margin-bottom: 15px;
            position: relative;
            padding-bottom: 8px;
        }

        .detail-section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            background: #1a3c64;
        }

        .detail-stats {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            margin-bottom: 20px;
        }

        .detail-stat {
            flex: 1;
            min-width: 120px;
            background: #f9f9f9;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .detail-stat-number {
            font-size: 24px;
            font-weight: 700;
            color: #1a3c64;
        }

        .detail-stat-label {
            font-size: 14px;
            color: #7f8c8d;
            margin-top: 5px;
        }

        .detail-description {
            color: #555;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .detail-team-member {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            padding: 15px;
            background: #f9f9f9;
            border-radius: 8px;
        }

        .member-image {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 15px;
        }

        .member-info {
            flex: 1;
        }

        .member-name {
            font-weight: 600;
            color: #1a3c64;
            margin-bottom: 3px;
        }

        .member-position {
            font-size: 14px;
            color: #7f8c8d;
        }

        .detail-projects {
            margin-top: 15px;
        }

        .project-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            padding: 15px;
            background: #f9f9f9;
            border-radius: 8px;
        }

        .project-image {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 15px;
        }

        .project-info {
            flex: 1;
        }

        .project-name {
            font-weight: 600;
            color: #1a3c64;
            margin-bottom: 5px;
        }

        .project-description {
            font-size: 14px;
            color: #555;
        }

        .detail-book-now {
            background: #ff6b35;
            color: white;
            border: none;
            padding: 15px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: block;
            width: 100%;
            margin-top: 30px;
            text-align: center;
            text-decoration: none;
        }

        .detail-book-now:hover {
            background: #e55a2b;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .company-container {
                grid-template-columns: 1fr;
                padding: 0 15px;
            }

            .detail-stats {
                flex-direction: column;
            }

            .detail-stat {
                margin-bottom: 10px;
            }

            .project-item {
                flex-direction: column;
                align-items: flex-start;
            }

            .project-image {
                margin-right: 0;
                margin-bottom: 10px;
            }
        }
    </style>
</head>
<body>
    <%- include('navbar_customer') %>
    <!-- Page Title -->
    <h1 class="page-title">Top Construction Companies</h1>

    <!-- Company Cards -->
    <div class="company-container">
        <% if (companies && companies.length > 0) { %>
            <% companies.forEach((company, index) => { %>
                <div class="company-card" data-id="<%= company._id %>">
                    <div class="company-name"><%= company.companyName %></div>
                    
                    <div class="company-stats">
                        <div class="stat">
                            <span class="stat-number"><%= company.projectsCompleted || '0+' %></span>
                            <span class="stat-label">Projects</span>
                        </div>
                        <div class="stat">
                            <span class="stat-number"><%= company.yearsInBusiness || '0' %></span>
                            <span class="stat-label">Years</span>
                        </div>
                    </div>
                    
                    <div class="company-details">
                        <%= company.description || 'Leading construction company with expertise in residential and commercial buildings, infrastructure development, and engineering services.' %>
                    </div>
                    
                    <div class="location">
                        <i class="fas fa-map-marker-alt"></i> <%= company.location && company.location.city ? company.location.city : 'Location not specified' %>, India
                    </div>
                    
                    <div class="buttons">
                        <button class="view-details-btn" onclick="showDetails('<%= company._id %>')" data-id="<%= company._id %>">View Details</button>
                        <a href="/constructionform.html?companyId=<%= company._id %>" class="book-now-btn">Book Now</a>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="no-companies">
                <p>No construction companies found.</p>
            </div>
        <% } %>
    </div>

    <!-- Company Details Modals -->
    <% if (companies && companies.length > 0) { %>
        <% companies.forEach(company => { %>
            <div class="details-overlay" id="<%= company._id %>-details">
                <div class="details-content">
                    <button class="close-details" onclick="closeDetails('<%= company._id %>')"><i class="fas fa-times"></i></button>
                    
                    <h2 class="detail-company-name"><%= company.companyName %></h2>
                    <p class="detail-company-subtitle"><%= company.contactPerson ? company.contactPerson + ' - ' : '' %>Leading Engineering & Construction</p>
                    
                    <div class="detail-section">
                        <h3 class="detail-section-title">Company Overview</h3>
                        <div class="detail-stats">
                            <div class="detail-stat">
                                <div class="detail-stat-number"><%= company.projectsCompleted || '0+' %></div>
                                <div class="detail-stat-label">Projects Completed</div>
                            </div>
                            <div class="detail-stat">
                                <div class="detail-stat-number"><%= company.yearsInBusiness || '0' %></div>
                                <div class="detail-stat-label">Years in Business</div>
                            </div>
                            <div class="detail-stat">
                                <div class="detail-stat-number"><%= company.size || 'N/A' %></div>
                                <div class="detail-stat-label">Employees</div>
                            </div>
                        </div>
                        
                        <p class="detail-description">
                            <%= company.description || 'Company description not available.' %>
                        </p>
                    </div>
                    
                    <% if (company.teamMembers && company.teamMembers.length > 0) { %>
                        <div class="detail-section">
                            <h3 class="detail-section-title">Key Team Members</h3>
                            <% company.teamMembers.forEach(member => { %>
                                <div class="detail-team-member">
                                    <img src="<%= member.image || '/api/placeholder/120/120' %>" alt="<%= member.name %>" class="member-image">
                                    <div class="member-info">
                                        <h4 class="member-name"><%= member.name %></h4>
                                        <p class="member-position"><%= member.position %></p>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                    
                    <% if (company.completedProjects && company.completedProjects.length > 0) { %>
                        <div class="detail-section">
                            <h3 class="detail-section-title">Completed Projects</h3>
                            <div class="detail-projects">
                                <% company.completedProjects.forEach(project => { %>
                                    <div class="project-item">
                                        <img src="<%= project.image || '/api/placeholder/120/120' %>" alt="<%= project.title %>" class="project-image">
                                        <div class="project-info">
                                            <h4 class="project-name"><%= project.title %></h4>
                                            <p class="project-description"><%= project.description %></p>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% } %>
                    
                    <% if (company.didYouKnow) { %>
                        <div class="detail-section">
                            <h3 class="detail-section-title">Did You Know?</h3>
                            <p class="detail-description">
                                <%= company.didYouKnow %>
                            </p>
                        </div>
                    <% } %>
                    
                    <a href="/constructionform.html?companyId=<%= company._id %>" class="detail-book-now">Book Now</a>
                </div>
            </div>
        <% }); %>
    <% } %>
    <%- include('customer_footer') %>
    <script>
        function showDetails(companyId) {
            const overlay = document.getElementById(companyId + '-details');
            if (!overlay) {
                console.error(`Overlay with ID ${companyId}-details not found.`);
                return;
            }
            overlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        }
        
        function closeDetails(companyId) {
            const overlay = document.getElementById(companyId + '-details');
            if (!overlay) {
                console.error(`Overlay with ID ${companyId}-details not found.`);
                return;
            }
            overlay.classList.remove('active');
            document.body.style.overflow = 'auto';
        }
        
        // Close the modal when clicking outside the content area
        document.addEventListener('DOMContentLoaded', function() {
            const overlays = document.querySelectorAll('.details-overlay');
            
            overlays.forEach(overlay => {
                overlay.addEventListener('click', function(e) {
                    if (e.target === overlay) {
                        overlay.classList.remove('active');
                        document.body.style.overflow = 'auto';
                    }
                });
            });
            
            // Close when ESC key is pressed
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    const activeOverlay = document.querySelector('.details-overlay.active');
                    if (activeOverlay) {
                        activeOverlay.classList.remove('active');
                        document.body.style.overflow = 'auto';
                    }
                }
            });
        });
    </script>
</body>
</html>
